@model IEnumerable<CategoryDisplayResponse>
<div class="dropdown">
    <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
        Kategoriler
    </button>
    <ul class="dropdown-menu p-0" style="width:max-content">
        @foreach (var item in Model)
        {
            <li class="list-group-item list-group-item-primary">
                <a asp-action="Index" asp-controller="Home" asp-route-id="@item.Id" class="list-group-item list-group-item-action">@item.Name</a>
            </li>
        }
    </ul>
</div>